    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="123*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*">


            </ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Dock="Bottom"  Grid.Column="0" Margin="8,8,4,4.8">
            <Border BorderThickness="1" BorderBrush="Black">

                <ListView Name="Tournament_ListView" SelectionChanged="Tournament_ListView_SelectionChanged" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Дисциплина" DisplayMemberBinding="{Binding Discipline}"/>
                        <GridViewColumn Header="Участники" DisplayMemberBinding="{Binding MaxUsersCount}"/>
                        <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding DateStart}"/>
                        <GridViewColumn Header="Окончание" DisplayMemberBinding="{Binding DateEnd}"/>
                        <GridViewColumn Header="Победитель" DisplayMemberBinding="{Binding Winner}"/>
                        <GridViewColumn Header="Место Проведения" DisplayMemberBinding="{Binding Place}"/>
                        <GridViewColumn Header="Дата Отмены" DisplayMemberBinding="{Binding DateCanceled}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            </Border>
        </DockPanel>
        <DockPanel Dock="Bottom" Grid.Column="1" Margin="4,8,0,4.8" >
            <Border BorderThickness="1" BorderBrush="Black" >
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="0.25*"></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>

                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center">Авторизация</Label>
                    <Label Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Center">Логин</Label>
                    <Label Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center">Пароль</Label>
                    <TextBox Text="{Binding ElementName=window,Path=Auth.Login}" Grid.Row="1" Grid.Column="1" Margin="0,0,5,2.5"></TextBox>
                    <TextBox Text="{Binding ElementName=window,Path=Auth.Password}" Grid.Row="2" Grid.Column="2" Margin="0,2.5,5,0"></TextBox>
                    <DockPanel Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0">
                        <Button  Click="Button_Click" Width="100" Height="20" Margin="0, 0 ,20, 0">Вход</Button>
                        <Button Width="100" Height="20">Регистрация</Button>
                    </DockPanel>
                    <Label Grid.Row="3" Grid.ColumnSpan="2" Foreground="Red" x:Name="ErrorLabel"> </Label>
                </Grid>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=window,Path=Auth.IsAuthorized}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=window,  Path=Auth.IsAuthorized}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Border  BorderThickness="1" BorderBrush="Black" >
                <Grid >
                    <Grid.Resources>
                        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                        <Label  HorizontalContentAlignment="Center">Имя Пользователя</Label>
                        <Label HorizontalContentAlignment="Center">Дата Регистрации</Label>
                        <Label HorizontalContentAlignment="Center">Статус</Label>
                    </StackPanel>
                    <ListBox Margin="5, 0, 5, 0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch">Здесь будет выводиться информация о пользователе</ListBox>
                    <Button Grid.Row="4" Grid.Column="0" Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" >Редактировать</Button>
                    <Button Grid.Row="4" Grid.Column="1" Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click_1" >Выйти</Button>
                </Grid>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=window,Path=Auth.IsAuthorized}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=window,  Path=Auth.IsAuthorized}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DockPanel>
    </Grid>
</Window>
