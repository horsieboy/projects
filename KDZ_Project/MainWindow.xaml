<Window x:Class="KDZ_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDZ_Project"
        xmlns:models="clr-namespace:KDZ_Project.Models"
        xmlns:ice="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        
        mc:Ignorable="d"
        x:Name="window" Title="Launcher" ResizeMode="NoResize" Height="400" Width="1000" Icon="C:\Users\Самый Крутой Парень\Documents\Visual Studio 2015\Projects\KDZ_Project\favicon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />

            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*">
            </ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.43*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0">Введите искомое мероприятие</Label>
                <TextBox x:Name="search" KeyUp="TextBox_KeyUp" Margin="5" Grid.Row="0" Grid.Column="1" ></TextBox>
            </Grid>
        </DockPanel>
        <DockPanel Dock="Bottom"  Grid.Row="1" Grid.Column="0" Margin="8,8,4,4.8">
            <Border BorderThickness="1" BorderBrush="Black" >
                <ListView Name="Tournament_ListView" SelectionChanged="Tournament_ListView_SelectionChanged" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding Id}"/>
                            <GridViewColumn Width="50"  Header="Статус">
                                <GridViewColumn.CellTemplate >
                                    <DataTemplate>
                                        <Label Height="50" Width="50" >
                                            <Label.Style>
                                                <Style TargetType="{x:Type Label}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="1">
                                                            <Setter Property="Background" Value="Green" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="2">
                                                            <Setter Property="Background" Value="Yellow" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="3">
                                                            <Setter Property="Background" Value="Red" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Дисциплина" DisplayMemberBinding="{Binding Discipline}"/>
                            <GridViewColumn Header="Участники" DisplayMemberBinding="{Binding MaxUsersCount}"/>
                            <GridViewColumn Header="Записалось" DisplayMemberBinding="{Binding Contestants}"/>
                            <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding DateStart}"/>
                            <GridViewColumn Header="Окончание" DisplayMemberBinding="{Binding DateEnd}"/>
                            <GridViewColumn Header="Место Проведения" DisplayMemberBinding="{Binding Place}"/>
                            <GridViewColumn Header="Дата Отмены" DisplayMemberBinding="{Binding DateCanceled}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=window,Path=Main.IsCompetitionSelected}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=window,  Path=Main.IsCompetitionSelected}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Border BorderThickness="1" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"></RowDefinition>
                        <RowDefinition Height="0.8*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Button Height="42" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" x:Name="Cancel_Button" Click="Cancel" Margin="0,0,0.5,0.5">Отмена</Button>

                        <Button Height="42" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" x:Name="Apply" Click="Apply_Click" Margin="0,0,0.5,0.5">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers >
                                        <DataTrigger Binding="{Binding ElementName=window,Path=Main.CanApply}" Value="True">
                                            <Setter Property="Content" Value="Записаться" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=window,Path=Main.CanApply}" Value="False">
                                            <Setter Property="Content" Value="Отписаться" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <ComboBox x:Name="Contestants" Grid.Row="0" Grid.Column="2" ItemsSource="{Binding ElementName=window, Path=Main.Competition.Users}" DisplayMemberPath="Name" SelectedValue="Id"></ComboBox>
                    </Grid>
                    <Grid Grid.Row="1" IsEnabled="{Binding ElementName=window, Path=Main.IsCreator}">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15*"></ColumnDefinition>
                            <ColumnDefinition Width="15*"></ColumnDefinition>
                            <ColumnDefinition Width="10*"></ColumnDefinition>
                            <ColumnDefinition Width="5*" ></ColumnDefinition>
                            <ColumnDefinition Width="15*"></ColumnDefinition>
                            <ColumnDefinition Width="15*"></ColumnDefinition>
                            <ColumnDefinition Width="16*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Grid.ColumnSpan="4" Margin="0,0,-0.5,0" >Название Соревнования -</Label>
                        <TextBox Grid.Row="0" Text="{Binding ElementName=window, Path=Main.Competition.Name}"  Grid.ColumnSpan="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,-0.5,0"></TextBox>

                        <Label Grid.Row="1" >Дисциплина</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ElementName=window, Path=Main.Competition.Discipline}"></TextBox>

                        <Label Grid.Row="2"  Grid.Column="2" Grid.ColumnSpan="2">Количество Участников</Label>
                        <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding ElementName=window, Path=Main.Competition.MaxUsersCount}"></TextBox>

                        <Label Grid.Row="1" Grid.Column="5">Призовые</Label>
                        <TextBox Grid.Row="1" Grid.Column="6" Text="{Binding ElementName=window, Path=Main.Competition.Prize}" Margin="0,0,-0.5,0"></TextBox>

                        <Label Grid.Row="2" >Место Проведения</Label>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ElementName=window, Path=Main.Competition.Place}"></TextBox>

                        <Label Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2">Дата Начала</Label>
                        <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding ElementName=window, Path=Main.Competition.DateStart}"></TextBox>

                        <Label Grid.Row="2" Grid.Column="5">Дата Окончания</Label>
                        <TextBox Grid.Row="2" Grid.Column="6" Text="{Binding ElementName=window, Path=Main.Competition.DateEnded}" Margin="0,0,-0.5,0"></TextBox>

                        <Label Grid.Row="3"  Grid.Column="0">Дата Отмены</Label>
                        <TextBox  Grid.Row="3" Grid.ColumnSpan="6" Grid.Column="1" Text="{Binding ElementName=window, Path=Main.Competition.DateCanceled}" Margin="0,0,-0.5,0"></TextBox>

                        <Label Grid.Row="3"  Grid.Column="3">Свободные места</Label>
                        <TextBox  Grid.Row="3" Grid.ColumnSpan="6" Grid.Column="4"  Margin="0,0,-0.5,0"></TextBox>

                        <Label Grid.Row="3"  Grid.Column="5">Возможность Записи</Label>
                        <TextBox  Grid.Row="3" Grid.ColumnSpan="6" Grid.Column="6"  Margin="0,0,-0.5,0"></TextBox>

                        <Button Grid.Row="4" Grid.ColumnSpan="2" Click="SaveCompetition" Margin="0,0,0,0.5">Сохранить</Button>

                        <Button Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="2"  Click="RemoveCompetition" Margin="0,0,0,0.5">Удалить</Button>
                    </Grid>
                </Grid>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=window,Path=Main.IsCompetitionSelected}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=window,  Path=Main.IsCompetitionSelected}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

        </DockPanel>
        <DockPanel Dock="Bottom" Grid.Column="1" Grid.RowSpan="2" Margin="4,8,0,4.8" >
            <Border BorderThickness="1" BorderBrush="Black" >
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="0.25*"></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>

                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center">Авторизация</Label>
                    <Label Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Center">Логин</Label>
                    <Label Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center">Пароль</Label>
                    <TextBox Text="{Binding ElementName=window,Path=Auth.Login}" Grid.Row="1" Grid.Column="1" Margin="0,0,5,2.5"></TextBox>
                    <PasswordBox x:Name="password" PasswordChar="*" PasswordChanged="password_PasswordChanged" Grid.Row="2" Grid.Column="2" Margin="0,2.5,5,0"></PasswordBox>
                    <DockPanel Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0">
                        <Button  Click="Login" Width="100" Height="20" Margin="0, 0 ,20, 0">Вход</Button>
                        <Button Click="Register" Width="100" Height="20">Регистрация</Button>
                    </DockPanel>
                    <Label Grid.Row="3" Grid.ColumnSpan="2" Foreground="Red" x:Name="ErrorLabel"></Label>
                </Grid>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=window,Path=Auth.IsAuthorized}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=window,  Path=Auth.IsAuthorized}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Border  BorderThickness="1" BorderBrush="Black" >
                <Grid >
                    <Grid.Resources>
                        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=window,Path=Main.IsEdit}" Value="True">
                                        <Setter Property="IsEnabled" Value="true" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=window,  Path=Main.IsEdit}" Value="False">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <Label  HorizontalContentAlignment="Center">Имя Пользователя</Label>
                        <TextBox Text="{Binding ElementName=window, Path=Auth.Name}"></TextBox>
                        <Label HorizontalContentAlignment="Center">Дата Регистрации</Label>
                        <TextBox Text="{Binding ElementName=window, Path=Auth.RegDate}"></TextBox>
                        <Label HorizontalContentAlignment="Center">Статус</Label>
                        <TextBox Text="{Binding ElementName=window, Path=Auth.Status}"></TextBox>
                    </StackPanel>
                    <ListBox Margin="5, 0, 5, 0" Grid.Row="1" ItemsSource="{Binding ElementName=window, Path=Auth.Competitions}" DisplayMemberPath="Name" SelectedValuePath="Id" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch"></ListBox>
                    <Button Click="Edit" Grid.Row="4" Grid.Column="0" Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <Button.Content>Редактировать</Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=window,Path=Main.IsEdit}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=window,  Path=Main.IsEdit}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button  Click="Edit" Grid.Row="4" Grid.Column="0" Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <Button.Content>Сохранить</Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=window,Path=Main.IsEdit}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=window,  Path=Main.IsEdit}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Grid.Row="3" Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Exit" Grid.ColumnSpan="2" Margin="-36,35,-45,34.5" >Выйти</Button>
                </Grid>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=window,Path=Auth.IsAuthorized}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=window,  Path=Auth.IsAuthorized}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DockPanel>
    </Grid>
</Window>
